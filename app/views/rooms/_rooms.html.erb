<div class="mb-3">
	<%= link_to new_room_path, class: "btn btn-primary" do %>
		Create a room
	<% end %>
</div>
<% if @rooms.present? %>
	<div class="list-group">
		<% @rooms.each do |room| %>
			<%= link_to room.name, room_path(room), class: "list-group-item list-group-item-action" %>
		<% end %>
	</div>
<% else %>
	<div class="text-muted">
		There are no rooms
	</div>
<% end %>